{
  "manifest_version": 3,
 
  "name": "Slides Captions",
  "version": "0.3.0",
  "description": "Make Google Slides Captions Multi Line",
 
  "action": {
    "default_popup": "popup.html"
  },
  
  "background": {
    "service_worker": "scripts.js"
  },
  
  "content_scripts": [{
    "css": ["styles.css"],
    "matches": ["https://docs.google.com/*"]
  }],
  
  "icons": {
    "128": "icon128.png"
  },
 
   "permissions":[
     "activeTab",
     "scripting",
     "storage"
],
  
 "host_permissions":[
  "https://docs.google.com/*"
  ]
 
}
